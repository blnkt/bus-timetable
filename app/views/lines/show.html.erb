<h1><%=@line.name%> Line</h1>

<ul>
<% @line.stations.each do |station| %>
  <li><%= link_to station.name, station_path(station), :class=> "btn btn-default btn-xs" %></li>
<%end%>
</ul>

<p><%= link_to "Edit", edit_line_path(@line), :class => "btn btn-default" %></p>
<p><%= link_to "Delete", line_path(@line),
                         :data => {:confirm => "You sure?",
                                   :method => "delete"},
                         :class => "btn btn-danger" %></p>

<%= link_to "Lines", lines_path, :class=> "btn btn-default" %>
